<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with FoodHut landing page.">
    <meta name="author" content="Devcrud">
    <title>FoodHut | Free Bootstrap 4.3.x template</title>

    <!-- font icons -->
    <link rel="stylesheet" href="~/foodhut/public_html/assets/vendors/themify-icons/css/themify-icons.css">

    <link rel="stylesheet" href="~/foodhut/public_html/assets/vendors/animate/animate.css">

    <!-- Bootstrap + FoodHut main styles -->
    <link rel="stylesheet" href="~/foodhut/public_html/assets/css/foodhut.css">
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">

    <!-- Navbar -->
    <nav class="custom-navbar navbar navbar-expand-lg navbar-dark fixed-top" data-spy="affix" data-offset-top="10">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a asp-area="" class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" class="nav-link"  asp-controller="FoodRecipe" asp-action="FoodRecipeList">Tarif Listesi</a>
                </li>
               
            </ul>
            <a class="navbar-brand m-auto" href="#">
                <img src="~/foodhut/public_html/assets/imgs/logo.svg" class="brand-img" alt="">
                <span class="brand-txt">Sena</span>
            </a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-area="" class="nav-link" asp-controller="FoodRecipe" asp-action="AddFoodRecipe">Tarif Ekle</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" class="nav-link" asp-controller="FoodRecipe" asp-action="FoodRecipeDetails">Tarif Detayı </a>
                </li>
               
            </ul>
        </div>
    </nav>
    <!-- header -->
    <header id="home" class="header">
        <div class="overlay text-white text-center">
            <h1 class="display-2 font-weight-bold my-3">Hatice Sena</h1>
            <h2 class="display-4 mb-5">Her Zaman Lezzetli Ve Kaliteli Tariflerin Adresi</h2>
        </div>
    </header>

  
    
    

   
    
    @RenderBody()

    

  
    

    <!-- page footer  -->
    <div class="bg-dark text-light text-center border-top wow fadeIn">
        <p class="mb-0 py-3 text-muted small">&copy; Copyright <script>document.write(new Date().getFullYear())</script> <i class="ti-heart text-danger"></i> </a></p>
    </div>
    <!-- end of page footer -->
    <!-- core  -->
    <script src="~/foodhut/public_html/assets/vendors/jquery/jquery-3.4.1.js"></script>
    <script src="~/foodhut/public_html/assets/vendors/bootstrap/bootstrap.bundle.js"></script>

    <!-- bootstrap affix -->
    <script src="~/foodhut/public_html/assets/vendors/bootstrap/bootstrap.affix.js"></script>

    <!-- wow.js -->
    <script src="~/foodhut/public_html/assets/vendors/wow/wow.js"></script>

    <!-- google maps -->
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtme10pzgKSPeJVJrG1O3tjR6lk98o4w8&callback=initMap"></script>

    <!-- FoodHut js -->
    <script src="~/foodhut/public_html/assets/js/foodhut.js"></script>

</body>
</html>
