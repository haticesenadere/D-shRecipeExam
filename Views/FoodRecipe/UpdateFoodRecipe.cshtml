@model FoodRecipeDto

@{
    ViewData["Title"] = "Blog Güncelle";
}

<h1>Blog Yazını Yükle</h1>

<form asp-action="UpdateFoodRecipe" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    

    <div class="form-group">
        <label for="title">Başlık</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Özet</label>
        <input type="text" class="form-control" asp-for="FoodMaterial" />
    </div>
    <div class="form-group">
        <label>İçerik</label>
        <input type="text" class="form-control" asp-for="FoodPreparation" />
    </div>


    <div class="form-group">
        <label>Dosya Seç:</label>
        <input type="file" class="file-upload-default" asp-for="File">

    </div>

    <button type="submit" class="new-entry-link">Güncelle</button>



</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}